<div class="container">
  <h1>Bank Settings</h1>
  <h3>Money goes from your checking account:</h3>
  <%= link_to accounts_debtor_path, class: "card-account" do %>
    <h1 class="emoji" style="font-size: 2.25rem">🏦</h1>
    <div class="container-text">
      <% if @debtor_account %>
        <h3><%= @debtor_account.name %></h3>
        <p><%= @debtor_account.iban %></p>
      <% else  %>
        <p> Set up your checking account </p>
      <% end %>
    </div>
    <h2><i></i>></h2>
  <% end %>
  <div class="container" style="padding: 0px">
    <h3 class="card-title">To your savings account:</h3>
    <%= link_to accounts_creditor_path, class: "card-account" do %>
      <h1 class="emoji" style="font-size: 2.25rem">🏦</h1>
      <div class="container-text">
        <% if @creditor_account %>
          <h3> <%= @creditor_account.name %></h3>
          <p><%= @creditor_account.iban %></p>
        <% else %>
          <p> Set up your savings account </p>
        <% end %>
      </div>
      <h2><i></i>></h2>
    <% end %>
  </div>
</div>
