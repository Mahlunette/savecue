<div class="container">
  <nav class="container-toggle">
    <%= link_to "Dashboard", home_path, class: "btn-toggle active" %>
    <%= link_to "Transactions", home_path, class: "btn-toggle" %>
  </nav>
  <!-- SUMMARY -->
  <div class="card-total-amount bg-white">
    <h1 class="p-large"><%= number_to_currency(@total_saved, unit: 'â‚¬', precision: 0, format: "%n%u") %></h1>
    <h3>Amount saved</h3>
  </div>
  <!-- CUES -->
  <div class="container-text" style="gap: 1rem">
    <h3>Your savecues</h3>
    <div class="card-grid">
      <% @user_cues.each do |user_cue| %>
        <div class="card-cue <%= css_for_category(user_cue.cue.category) %>">
          <h1 class="emoji"><%= emoji_for_category(user_cue.cue.category) %></h1>
          <h3><%= user_cue.cue.title %></h3>
          <p><%= user_cue.cue.description %></p>
        </div>
      <% end %>
      <div class="card-cue bg-darker-yellow">
        <h1 class="emoji">+</h1>
        <h3>Add cue</h3>
        <p>Start saving with more savecues!</p>
      </div>
    </div>
  </div>
</div>
